<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">
                    <i class="fas fa-text-width"></i>
                    User Information
                </h3>
            </div>

            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-4">Name</dt>
                    <dd class="col-sm-8">
                        <%= data.User.name %>
                    </dd>
                    <dt class="col-sm-4">Email ID</dt>
                    <dd class="col-sm-8">
                        <%= data.User.email %>
                    </dd>
                    <dt class="col-sm-4">Address</dt>
                    <dd class="col-sm-8 text-breck">
                        <%= data.orderAddress %>
                    </dd>
                    <dt class="col-sm-4">Order Status</dt>
                    <dd class="col-sm-8"
                        style=" <%= data.status==='CANCELLED'?'color: #dc3545;': data.status === 'DELIVERED' ? 'color: #28a745;' : 'color: #ffc107;' %>font-weight: bold;">
                        <%= data.status %>
                    </dd>
                    <dt class="col-sm-4">Total</dt>
                    <dd class="col-sm-8" style="font-weight: bold;font-size: larger;">â‚¹ <%= data.total %>
                    </dd>
                    <dt class="col-sm-4">Order Time</dt>
                    <dd class="col-sm-8">
                        <%= data.createdAt %>
                    </dd>
                </dl>
            </div>
        </div>
    </div>
    <div class="col-12">
        <div class="card">
            <div class="card-body table-responsive p-0" style="height: 300px">
                <table class="table text-nowrap text-center">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Item</th>
                            <th>Name</th>
                            <th>Attribute</th>
                            <th>Quantity</th>
                            <th>Price</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% items.forEach(item=> { %>
                            <tr>
                                <td>
                                    <%= item.productId %>
                                </td>
                                <td>
                                    <img style="height: 100px" src="<%= item.productImage %>" alt="product" />
                                </td>
                                <td>
                                    <%= item.productName %>
                                </td>
                                <td>
                                    <div>
                                        <p>
                                            <span style="font-weight: bold; color: #6e6c6c">Weight</span>
                                            :
                                            <span style="font-weight: bold; color: #333">
                                                <%= item.productWeight %>
                                            </span>
                                        </p>
                                    </div>
                                </td>
                                <td>
                                    <%= item.quantity %>
                                </td>
                                <td>
                                    <%= item.productPrice %>
                                </td>
                            </tr>

                            <% }); %>
                    </tbody>
                </table>
            </div>

            <div class="card-footer d-flex">
                <a href="/admin/orders"><button type="button" class="btn btn-secondary ml-2">
                        <i class="fas fa-solid fa-arrow-left mx-1"></i> Back
                    </button></a>
            </div>
        </div>
    </div>
</div>