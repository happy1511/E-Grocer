<div class="row">
    <div class="col-lg-12 col-12">
        <div class="card card-info card-outline">
            <div class="card-header">
                <h3 class="card-title">List of Users</h3>
                <div class="card-tools">
                    <a href=" /admin/users/form/0"><button type="button" class="btn btn-info btn-sm ml-3 ">Add
                            New</button></a>
                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-12">
                        <table id="crud-table" class="table table-bordered table-striped dataTable">
                            <thead>
                                <tr role="row">
                                    <th>Name</th>
                                    <th>Email</th>
                                    <th>Address</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% items.forEach((item)=>{ %>
                                    <tr>
                                        <td>
                                            <%=item['name']%>
                                        </td>
                                        <td>
                                            <%=item['email']%>
                                        </td>
                                        <td>
                                            <%=item['address']%>
                                        </td>
                                        <td>
                                            <div class="btn-group-sm">
                                                <a href="
                                                users/form/<%=item['userId']%>
                                                " title="Edit" class="btn btn-info btn-xs"><i
                                                        class="fas fa-edit"></i></a>
                                                <button onclick="handleAlert('/admin/categories/delete/<%= item.categoryId %>')"  class="btn btn-danger delete"><i
                                                        class="fas fa-trash"></i></button>
                                            </div>
                                        </td>
                                    </tr>
                                    <% }) %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>